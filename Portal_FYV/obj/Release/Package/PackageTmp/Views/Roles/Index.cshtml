@model IEnumerable<Portal_FYV.Models.Roles>

@{
    ViewBag.Title = "Index";
}

<div class="bg-white">
    <h2>Lista de Roles</h2>

    <p>
        @Html.ActionLink("Crear Nuevo", "Create", new { area = "" }, new { @class = "btn btn-success" })
    </p>
    <div class="table-responsive rounded rounded-2 border">
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_Rol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol)
                    </td>
                    <td class="d-flex flex-column gap-3 align-items-end">
                        <button class="btn btn-info rounded-1" onclick="location.href='@Url.Action("Edit", "Roles", new { id = item.Id_Rol })'"><i class="bi bi-pencil"></i></button>

                        @using (Html.BeginForm("Delete", "Roles", new { id = item.Id_Rol }, FormMethod.Post, new { @class = "m-0", id = "deleteForm_" + item.Id_Rol }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.Id_Rol)
                            <button class="btn btn-danger rounded-1 w-100" type="button" onclick="confirmDelete(@item.Id_Rol, this)"><i class="bi bi-trash"></i></button>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>