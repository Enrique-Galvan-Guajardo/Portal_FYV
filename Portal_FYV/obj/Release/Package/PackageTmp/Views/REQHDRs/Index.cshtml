@model IEnumerable<Portal_FYV.Models.REQHDR>

@{
    ViewBag.Title = "Index";
}

<div class="bg-white">
    <h2>Lista de REQHDRs</h2>

    <p>
        @Html.ActionLink("Crear Nuevo", "Create", new { area = "" }, new { @class = "btn btn-success" })
    </p>

    <div class="table-responsive rounded rounded-2 border">
        <table class="table table-striped">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sucursal)
                </th>
                <th>
                    Usuario Creador
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha_creacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estatus)
                </th>
                <th>
                    Usuario Validador
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha_validacion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id_REQHDR)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sucursal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_creacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario1.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_validacion)
                    </td>
                    <td class="d-flex flex-column gap-3 align-items-end">
                        <button class="btn btn-info rounded-1" onclick="location.href='@Url.Action("Edit", "REQHDRs", new { id = item.Id_REQHDR })'"><i class="bi bi-pencil"></i></button>

                        @using (Html.BeginForm("Delete", "REQHDRs", new { id = item.Id_REQHDR }, FormMethod.Post, new { @class = "m-0", id = "deleteForm_" + item.Id_REQHDR }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.Id_REQHDR)
                            <button class="btn btn-danger rounded-1 w-100" type="button" onclick="confirmDelete(@item.Id_REQHDR, this)"><i class="bi bi-trash"></i></button>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

