@model IEnumerable<Portal_FYV.Models.Estatus>

@{
    ViewBag.Title = "Index";
}
<div class="bg-white">
    <h2>Lista de Estatus</h2>

    <p>
        @Html.ActionLink("Crear Nuevo", "Create", new { area = "" }, new { @class = "btn btn-success" })
    </p>
    <div class="table-responsive rounded rounded-2 border">
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Estatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="d-flex flex-column gap-3 align-items-end">
                    <button class="btn btn-info rounded-1" onclick="location.href='@Url.Action("Edit", "Estatus", new { id = item.Id_Estatus })'"><i class="bi bi-pencil"></i></button>

                    @using (Html.BeginForm("Delete", "Estatus", new { id = item.Id_Estatus }, FormMethod.Post, new { @class = "m-0", id = "deleteForm_" + item.Id_Estatus }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", item.Id_Estatus)
                        <button class="btn btn-danger rounded-1 w-100" type="button" onclick="confirmDelete(@item.Id_Estatus, this)"><i class="bi bi-trash"></i></button>
                    }
                </td>
            </tr>
        }

        </table>
    </div>
</div>
