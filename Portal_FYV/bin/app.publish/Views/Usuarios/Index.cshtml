@model IEnumerable<Portal_FYV.Models.Usuario>

@{
    ViewBag.Title = "Index";
}
<div class="bg-white">
    <h2>Lista de usuarios</h2>

    <p>
        @Html.ActionLink("Crear Nuevo", "Create", new { area = "" }, new { @class = "btn btn-success" })
    </p>
    <div class="table-responsive rounded rounded-2 border">
        <table class="table table-striped">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contrasena)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Roles.Rol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sucursal)
                </th>
                <th>
                    Fecha de Aprobación
                </th>
                <th>
                    Razón Social
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RFC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pais)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ciudad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colonia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Localidad)
                </th>
                <th>
                    Código Postal
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Calle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Proveeedor_no_mks)
                </th>
                <th>
                    Contactos
                </th>
                <th>
                    Correos
                </th>
                <th>
                    Teléfonos
                </th>
                <th>
                    Búsqueda de frutas
                </th>
                <th>
                    Búsqueda de secos
                </th>
                <th>
                    Búsqueda de vegetales
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prorroga)
                </th>
                <th>
                    Estatus
                </th>
                <th></th>
            </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contrasena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles.Rol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sucursal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Aprov)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Razon_social)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RFC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pais)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ciudad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colonia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo_postal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proveeedor_no_mks)
                </td>
                <td class="text-muted" style="min-width: 200px;">
                    @(item.Contacto_nombre1 == null ? "Sin contacto" : item.Contacto_nombre1)
                    <hr />
                    @(item.Contacto_nombre2 == null ? "Sin contacto" : item.Contacto_nombre2)
                    <hr />
                    @(item.Contacto_nombre3 == null ? "Sin contacto" : item.Contacto_nombre3)
                </td>
                <td class="text-muted" style="min-width: 200px;">
                    @(item.Contacto_correo1 == null ? "Sin correo" : item.Contacto_correo1)
                    <hr />
                    @(item.Contacto_correo2 == null ? "Sin correo" : item.Contacto_correo2)
                    <hr />
                    @(item.Contacto_correo3 == null ? "Sin correo" : item.Contacto_correo3)
                </td>
                <td class="text-muted" style="min-width: 200px;">
                    @(item.Contacto_tel1 == null ? "Sin teléfono" : item.Contacto_tel1)
                    <hr />
                    @(item.Contacto_tel2 == null ? "Sin teléfono" : item.Contacto_tel2)
                    <hr />
                    @(item.Contacto_tel3 == null ? "Sin teléfono" : item.Contacto_tel3)
                </td>
                <td>
                    @(item.permitir_Fru == true ? "Habilitado" : "Inhabilitado")
                </td>
                <td>
                    @(item.permitir_Sec == true ? "Habilitado" : "Inhabilitado")
                </td>
                <td>
                    @(item.permitir_Veg == true ? "Habilitado" : "Inhabilitado")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prorroga)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estatus.Name)
                </td>
                <td class="d-flex flex-column gap-3 align-items-end">
                    <button class="btn btn-info rounded-1" onclick="location.href='@Url.Action("Edit", "Usuarios", new { id = item.Id_Usuario })'"><i class="bi bi-pencil"></i></button>

                    @using (Html.BeginForm("Delete", "Usuarios", new { id = item.Id_Usuario }, FormMethod.Post, new { @class = "m-0", id = "deleteForm_" + item.Id_Usuario }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", item.Id_Usuario)
                        <button class="btn btn-danger rounded-1 w-100" type="button" onclick="confirmDelete(@item.Id_Usuario, this)"><i class="bi bi-trash"></i></button>
                    }
                </td>
            </tr>
        }

        </table>
        
    </div>
</div>
