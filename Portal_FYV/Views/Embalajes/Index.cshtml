@model IEnumerable<Portal_FYV.Models.Embalaje>

@{
    ViewBag.Title = "Index";
}
<div class="bg-white">
    <h2>Lista de Embalajes</h2>

    <p>
        @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-success" })
    </p>

    <div class="table-responsive rounded rounded-2 border">
        <table class="table table-striped">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Tipo de embalaje
                </th>
                <th>
                    Valor de medida
                </th>
                <th>
                    Unidad de medida
                </th>
                <th></th>
            </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Embalaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Embalaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valor_um)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.um)
                </td>
                <td class="d-flex flex-column gap-3 align-items-end">
                    <button class="btn btn-info rounded-1" onclick="location.href='@Url.Action("Edit", "Embalajes", new { id = item.Id_Embalaje })'"><i class="bi bi-pencil"></i></button>

                    @using (Html.BeginForm("Delete", "Embalajes", new { id = item.Id_Embalaje }, FormMethod.Post, new { @class = "m-0", id = "deleteForm_" + item.Id_Embalaje }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", item.Id_Embalaje)
                        <button class="btn btn-danger rounded-1 w-100" type="button" onclick="confirmDelete(@item.Id_Embalaje, this)"><i class="bi bi-trash"></i></button>
                    }
                    
                </td>
            </tr>
        }

        </table>
    </div>
</div>
